!!!
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type/" }
    %meta{ :name => "keywords", :content => t(:html_header_meta_content) }
    %link{ :rel => "stylesheet/less", :type=> "text/css", :href => "/stylesheets/screen.less", :media => 'screen, projection' }
    %script{ :src => "/javascripts/less-1.0.41.min.js", :type => "text/javascript" }
    %title
      = "Indicium.sk: #{@content_for_title}"
    = javascript_include_tag :defaults
    -# /[if lt IE 8]
    -#   = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  %body
    - content_for :sstorm_footer do
      = t(:do_not_hasitate_to_contact_us).html_safe
    = render 'shared/system_notify'
    %header#sstorm_pageheader
      = link_to(root_path) do
        = image_tag "header_image.png", :border => 0
      %nav#sstorm_navbar
        %ul= yield :sstorm_navbar
    %section#sstorm_pagebody
      - if flash[:notice]
        #notice= flash[:notice]
      = yield
    %footer#sstorm_pagefooter
      = yield :sstorm_footer
